<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
    <h1>user info</h1>
    <% if @user.errors.any? %>
      <div>
        <h3>
          <%= @user.errors.count %> error prohibited this obj from being saved:
        </h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li>
              <%= message %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_with model:@user, local:true do |f| %>
      <div class="form_group">
        <label for="inputName">name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:@user.name, class: "form-control name"  %>
      </div>
      <div class="form_group">
        <label for="inputImage">image</label>
        <%= f.attachment_field :profile_image, class: "form-control-file"%>
      </div>
      <div class="form_group">
      <label for="inputIntroduction">introduction</label>
      <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:@user.introduction, class: "form-control introduction"  %>
      </div>
      <div class="form_group">
        <%= f.submit "Update User" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
