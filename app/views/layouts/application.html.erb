<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/fdcdec1fce.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-md bg-dark">
        <div class="container">
          <%= link_to "Bookers", root_path, class: "text-light navbar-brand" %>
          <ul class="navbar-nav ml-auto" >
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to " Home", user_path(current_user.id), class: "fas fa-home text-light nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to " Users", users_path, class: "fas fa-users text-light nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to " Books", books_path, class: "fas fa-book-open text-light nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to " logout", destroy_user_session_path, method: :delete, class: "fas fa-sign-out-alt text-light nav-link" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to " Home", root_path, class: "fas fa-home text-light nav-link nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to " About", home_about_path, class: "fas fa-link text-light nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to " sign up", new_user_registration_path, class: "fas fa-user-plus text-light nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to " login", new_user_session_path, class: "fas fa-sign-in-alt text-light nav-link" %>
              </li class="nav-item">
            <% end %>
          </ul>
        </div>

      </nav>
    </header>
    <main>
      <%= flash[:notice]%>
      <%= flash[:alert]%>
      <% if ( flash[:title_error] or flash[:body_error] ) %>
        <ul>
          <% if flash[:title_error] %>
            <li>
              <%= flash[:title_error] %>
            </li>
          <% end %>
          <% if flash[:body_error] %>
            <li>
              <%= flash[:body_error] %>
            </li>
          <% end %>
        </ul>
      <% end %>
      <% if ( flash[:name_error] or flash[:introduction_error] ) %>
        <ul>
          <% if flash[:name_error] %>
            <li>
              <%= flash[:name_error] %>
            </li>
          <% end %>
          <% if flash[:introduction_error] %>
            <li>
              <%= flash[:introduction_error] %>
            </li>
          <% end %>
        </ul>
      <% end %>
      <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            CopyRight Infratop.inc
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
