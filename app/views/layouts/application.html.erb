<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1><%= link_to "Bookers", root_path %> ヘッダーヘッダー
      <% if user_signed_in? %>
      <%= link_to "home", user_path(current_user.id) %> <%= link_to "users", users_path %> <%= link_to "books", books_path %> <%= link_to "logout", destroy_user_session_path, method: :delete %>
      <% else %>
      <%= link_to "Home", root_path %> <%= link_to "About", home_about_path %> <%= link_to "sign up", new_user_registration_path %> <%= link_to "login", new_user_session_path %>
      <% end %>
      </h1>
    </header>
    <main>
      <%= flash[:notice]%>
      <%= flash[:alert]%>
      <% if ( flash[:title_error] or flash[:body_error] ) %>
        <ul>
          <% if flash[:title_error] %>
            <li>
              <%= flash[:title_error] %>
            </li>
          <% end %>
          <% if flash[:body_error] %>
            <li>
              <%= flash[:body_error] %>
            </li>
          <% end %>
        </ul>
      <% end %>
      <% if ( flash[:name_error] or flash[:introduction_error] ) %>
        <ul>
          <% if flash[:name_error] %>
            <li>
              <%= flash[:name_error] %>
            </li>
          <% end %>
          <% if flash[:introduction_error] %>
            <li>
              <%= flash[:introduction_error] %>
            </li>
          <% end %>
        </ul>
      <% end %>
      <%= yield %>
    </main>
    <footer>
      <h1>フッターフッターフッターフッターフッターフッター</h1>
    </footer>
  </body>
</html>
