<h2>サイドバーサイドバーサイドバー</h2>
<h1>user info</h1>

<%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
<h3>name</h3>
<h4>
  <%= user.name %>
</h4>


<h3>introduction</h3>
<h4>
  <%= user.introduction %>
</h4>

<h3>email</h3>
<h4>
  <%= user.email %>
</h4>
<%= link_to "edit", edit_user_path(user.id)%>
<h1>New book</h1>
<%= form_with model: book, url: books_path, local:true do |f| %>
<h4>title</h4>
<%= f.text_field :title %>
<h4>body</h4>
<%= f.text_area :body %>
<%= f.submit "Create Book"%>
<% end %>