<h1>books</h1>
<table>
    <tr>
        <th>user</th>
        <th>title</th>
        <th>opinion</th>
    </tr>
    <% books.each do |book| %>
        <tr>
            <td><%= link_to book.user_id, user_path(book.user.id)%></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
        </tr>
    <% end %>
</table>