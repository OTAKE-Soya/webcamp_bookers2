<h1>books</h1>
<table>
    <tr>
        <th>user</th>
        <th>title</th>
        <th>opinion</th>
    </tr>
    <% books.each do |book| %>
        <tr>
            <td><%= link_to user_path(book.user.id) do %>
                    <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %>
                <% end %>
            </td>
            <td>
                <%= link_to book_path(book.id) do %>
                    <%= book.title %>
                <% end %>

            </td>
            <td><%= book.body %></td>
        </tr>
    <% end %>
</table>