<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
        <h1>Editing Book</h1>
        <% if @book.errors.any? %>
            <div>
                <h3>
                    <%= @book.errors.count %> error prohibited this obj from being saved:
                </h3>
                <ul>
                    <% @book.errors.full_messages.each do |message| %>
                        <li>
                            <%= message %>
                        </li>
                    <% end %>
                </ul>

            </div>
        <% end %>
        <%= form_with model: @book, local:true do |f| %>
            <div class="form_group">
                <label for="inputTitle">Title</label>
                <%= f.text_field :title, autofocus: true, id: "inputTitle", placeholder: @book.title, class: "form-control name" %>
            </div>
            <div class="form_group">
                <label for="inputOpinion">Opinion</label>
                <%= f.text_field :body, autofocus: true, id: "inputOpinion", placeholder: @book.body, class: "form-control opinion"  %>
            </div>
            <div class="form_group">
                <%= f.submit "Update Book"%>
            </div>
        <% end %>
        <%= link_to "Show", book_path(@book.id) %>
        <%= link_to "Back", books_path %>
    </div>
</div>
